{
  "name": "@diva.exchange/explorer",
  "version": "0.1.0",
  "description": "diva - Distributed value exchange upholding security, reliability and privacy",
  "keywords": [
    "blockchain",
    "distributed",
    "value",
    "exchange",
    "crypto",
    "asset"
  ],
  "author": "Konrad Baechler <konrad@diva.exchange> (https://diva.exchange)",
  "license": "AGPL-3.0-or-later",
  "repository": {
    "type": "git",
    "url": "https://codeberg.org/diva.exchange/explorer.git"
  },
  "scripts": {
    "lint": "prettier -w \"**/*.ts\" && eslint --fix src/ --ext .ts",
    "build": "tsc ; cp node_modules/umbrellajs/umbrella.min.js static/js/umbrella.min.js ; node-sass --omit-source-map-url --output-style compressed static/sass/explorer.scss static/css/explorer.min.css",
    "start-dev": "NODE_ENV=development ts-node src/main.ts | pino-pretty -t -i pid,hostname",
    "test": "TS_NODE_PROJECT=./test/tsconfig.json NODE_ENV=test LOG_LEVEL=trace nyc mocha"
  },
  "dependencies": {
    "compression": "^1.7.4",
    "express": "^4.17.1",
    "http-errors": "^1.8.0",
    "pino": "^6.13.0",
    "pug": "^3.0.2",
    "simple-get": "^4.0.0",
    "ws": "^8.2.0"
  },
  "devDependencies": {
    "@tsconfig/node12": "^1.0.9",
    "@types/compression": "^1.7.1",
    "@types/express": "^4.17.13",
    "@types/express-serve-static-core": "^4.17.24",
    "@types/http-errors": "^1.8.1",
    "@types/node": "^16.6.2",
    "@types/pino": "^6.3.11",
    "@types/pug": "^2.0.5",
    "@types/ws": "^7.4.7",
    "@typescript-eslint/eslint-plugin": "^4.29.2",
    "@typescript-eslint/parser": "^4.29.2",
    "bulma": "^0.9.3",
    "chai": "^4.3.4",
    "chai-http": "^4.3.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-prettier": "^3.4.0",
    "mocha": "^9.0.3",
    "node-sass": "^6.0.1",
    "nyc": "^15.1.0",
    "pino-pretty": "^5.1.3",
    "prettier": "^2.3.2",
    "ts-node": "^10.2.1",
    "typescript": "^4.3.5",
    "umbrellajs": "^3.2.3"
  }
}
